{
  "name": "li4ark",
  "version": "1.0.0",
  "manifest_version": 2,

  "description": "toggle color scheme for the page",
  "homepage_url": "https://github.com/ojer/chtheme",
  "icons": {
    "16": "img/icon-16-dark.png",
    "24": "img/icon-24-dark.png",
    "32": "img/icon-32-dark.png",
    "48": "img/icon-48-dark.png",
    "64": "img/icon-64-dark.png",
    "96": "img/icon-96-dark.png"
  },

  "permissions": [
    "activeTab",
    "browserSettings",
    "storage",
    "tabs",
    "unlimitedStorage"
  ],

  "browser_action": {
    "default_icon": "img/icon-32-dark.png",
    "browser_style": true,
    "default_title": "toggle color scheme"
  },

  "background": {
    "scripts": ["js/background.js"]
  }
}
